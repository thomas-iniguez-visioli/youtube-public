<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Plyr CSS -->
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <script src="https://cdn.lr-ingest.com/LogRocket.min.js" crossorigin="anonymous"></script>
    <script>window.LogRocket && window.LogRocket.init('kw8sds/youtube-zozss');</script>

    <style>
        body {
            background-color: #0f0f0f;
            color: #ffffff;
            font-family: 'Roboto', sans-serif;
        }
        .video-container {
            margin-top: 20px;
        }
        .video-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-top: 15px;
            margin-bottom: 10px;
        }
        .video-meta {
            font-size: 0.9rem;
            color: #aaaaaa;
            margin-bottom: 15px;
        }
        .video-description {
            background-color: #272727;
            padding: 15px;
            border-radius: 12px;
            font-size: 0.95rem;
            white-space: pre-wrap;
        }
        .sidebar {
            padding-left: 20px;
        }
        .suggestion-card {
            display: flex;
            margin-bottom: 12px;
            text-decoration: none;
            color: inherit;
            transition: background 0.2s;
            padding: 5px;
            border-radius: 8px;
        }
        .suggestion-card:hover {
            background-color: #272727;
            color: #ffffff;
        }
        .suggestion-thumb {
            width: 168px;
            height: 94px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 12px;
        }
        .suggestion-info {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }
        .suggestion-title {
            font-size: 0.9rem;
            font-weight: 500;
            line-height: 1.2rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .suggestion-channel {
            font-size: 0.8rem;
            color: #aaaaaa;
            margin-top: 4px;
        }
        .nav-link-custom {
            color: #ffffff;
            text-decoration: none;
            margin-right: 15px;
            font-size: 0.9rem;
        }
        .nav-link-custom:hover {
            text-decoration: underline;
        }
        /* Custom Plyr Colors */
        :root {
            --plyr-color-main: #ff0000;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="https://www.youtube.com/s/desktop/2823798a/img/favicon_32x32.png" width="30" height="30" class="d-inline-block align-top" alt="">
                YouTube Downloader
            </a>
            <div class="d-flex">
                <a href="/history" class="btn btn-outline-info btn-sm rounded-pill px-4">Historique</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid video-container">
        <div class="row">
            <!-- Lecteur Vidéo et Infos -->
            <div class="col-lg-8">
                <div class="plyr__video-embed" id="player">
                    <video id="videoPlayer" controls crossorigin playsinline>
                        <source src="/video/?id=<%= code %>" type="video/mp4" />
                    </video>
                </div>

                <h1 class="video-title"><%= (typeof videodata !== 'undefined' && videodata.title) ? videodata.title : title %></h1>
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="video-meta">
                        <strong><a href="/channel?name=<%= (typeof videodata !== 'undefined' && videodata.uploader) ? encodeURIComponent(videodata.uploader) : '' %>" style="color: #ffffff; text-decoration: none;"><%= (typeof videodata !== 'undefined' && videodata.uploader) ? videodata.uploader : 'Uploader inconnu' %></a></strong> • <%= (typeof videodata !== 'undefined' && videodata.view_count) ? videodata.view_count.toLocaleString() + ' vues' : '' %>
                    </div>
                    <div>
                        <a href="/delete?id=<%= code %>" class="btn btn-outline-danger btn-sm">Supprimer</a>
                    </div>
                </div>

                <div class="video-description">
                    <p><%= (typeof videodata !== 'undefined') ? videodata.description : '' %></p>
                </div>

                <div class="mt-4">
                    <h5>Ajouter un tag</h5>
                    <form action="/tag" method="post" class="row g-3">
                        <div class="col-auto">
                            <input type="text" class="form-control form-control-sm bg-dark text-white border-secondary" id="tagInput" name="tag" placeholder="Tag..." required>
                        </div>
                        <input type="hidden" name="videoId" value="<%= code %>">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-secondary btn-sm">Taguer</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Barre Latérale (Suggestions) -->
            <div class="col-lg-4 sidebar">
                <h5 class="mb-3">Vidéos suggérées</h5>
                <% 
                    const suggestions = videos
                        .filter(v => v.yid !== code)
                        .sort(() => Math.random() - 0.5)
                        .slice(0, 5);
                    suggestions.forEach(function(v) { 
                %>
                    <a href="/watch?id=<%= v.yid %>" class="suggestion-card">
                        <img src="https://img.youtube.com/vi/<%= v.yid %>/hqdefault.jpg" class="suggestion-thumb" alt="<%= v.fileName %>">
                        <div class="suggestion-info">
                            <span class="suggestion-title"><%= v.fileName %></span>
                            <span class="suggestion-channel">Voir la vidéo</span>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Bootstrap & Plyr JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const player = new Plyr('#videoPlayer', {
                autoplay: true,
                invertTime: false,
                toggleInvert: true,
            });

            // Autoplay next video
            document.getElementById('videoPlayer').addEventListener('ended', function() {
                window.location.href = "/watch?id=<%= (typeof nextVideo !== 'undefined') ? (nextVideo.id || nextVideo.yid) : '' %>";
            });

            // Exposé pour le debug si besoin
            window.player = player;
        });
    </script>

    <!-- Tawk.to Script -->
    <script type="text/javascript">
        var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
        (function(){
            var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
            s1.async=true;
            s1.src='https://embed.tawk.to/673f4ae72480f5b4f5a1dbce/1id7jp68o';
            s1.charset='UTF-8';
            s1.setAttribute('crossorigin','*');
            s0.parentNode.insertBefore(s1,s0);
        })();
    </script>
</body>
</html>
